<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" stylesheets="css/user-grid-side.css" fx:controller="controller.UserSeekerGridController" fx:id="fullUserSide">
    <GridPane id="userSeekerGrid">
        <columnConstraints>
            <ColumnConstraints percentWidth="30" />
            <ColumnConstraints percentWidth="70" />
        </columnConstraints>
        <children>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="0"  text=""             styleClass="title-label" style="-fx-background-color: darkgray"/>
            <Label GridPane.columnIndex="1" GridPane.rowIndex="0"  text="status"       styleClass="title-label" fx:id="titleUserDataLabel"/>

            <Label GridPane.columnIndex="0" GridPane.rowIndex="1"  text="Handle"       styleClass="title-label" fx:id="titleHandleLabel"/>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="2"  text="Email"        styleClass="title-label" fx:id="titleEmailLabel" />
            <Label GridPane.columnIndex="0" GridPane.rowIndex="3"  text="VK ID"        styleClass="title-label" fx:id="titleVkIDLabel" />
            <Label GridPane.columnIndex="0" GridPane.rowIndex="4"  text="OpenID"       styleClass="title-label" fx:id="titleOpenIDLabel"/>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="5"  text="First name"   styleClass="title-label" fx:id="titleFirstNameLabel" />
            <Label GridPane.columnIndex="0" GridPane.rowIndex="6"  text="Last name"    styleClass="title-label" fx:id="titleLastNameLabel"/>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="7"  text="Country"      styleClass="title-label" fx:id="titleCountryLabel"/>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="8"  text="City"         styleClass="title-label" fx:id="titleCityLabel"/>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="9"  text="Organization" styleClass="title-label" fx:id="titleOrganizationLabel"/>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="10" text="Contribution" styleClass="title-label" fx:id="titleContributionLabel"/>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="11" text="Rating"       styleClass="title-label" fx:id="titleRatingLabel"/>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="12" text="Max. Rating"  styleClass="title-label" fx:id="titleMaxRatingLabel"/>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="13" text="Last visit"   styleClass="title-label" fx:id="titleLastVisitLabel"/>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="14" text="Registered"   styleClass="title-label" fx:id="titleRegisteredLabel"/>

            <Label    GridPane.columnIndex="1" GridPane.rowIndex="1"  styleClass="user-data-cell" fx:id="userHandleLabel"/>
            <Label    GridPane.columnIndex="1" GridPane.rowIndex="2"  styleClass="user-data-cell" fx:id="userEmailLabel"/>
            <Label    GridPane.columnIndex="1" GridPane.rowIndex="3"  styleClass="user-data-cell" fx:id="userVkIDLabel"/>
            <Label    GridPane.columnIndex="1" GridPane.rowIndex="4"  styleClass="user-data-cell" fx:id="userOpenIDLabel"/>
            <Label    GridPane.columnIndex="1" GridPane.rowIndex="5"  styleClass="user-data-cell" fx:id="userFirstNameLabel"/>
            <Label    GridPane.columnIndex="1" GridPane.rowIndex="6"  styleClass="user-data-cell" fx:id="userLastNameLabel"/>
            <Label    GridPane.columnIndex="1" GridPane.rowIndex="7"  styleClass="user-data-cell" fx:id="userCountryLabel"/>
            <Label    GridPane.columnIndex="1" GridPane.rowIndex="8"  styleClass="user-data-cell" fx:id="userCityLabel"/>
            <Label    GridPane.columnIndex="1" GridPane.rowIndex="9"  styleClass="user-data-cell" fx:id="userOrganizationLabel"/>
            <Label    GridPane.columnIndex="1" GridPane.rowIndex="10" styleClass="user-data-cell" fx:id="userContributionLabel"/>
            <HBox     GridPane.columnIndex="1" GridPane.rowIndex="11" styleClass="user-data-cell" fx:id="userRatingAndRankPane"/>
            <HBox     GridPane.columnIndex="1" GridPane.rowIndex="12" styleClass="user-data-cell" fx:id="userMaxRatingAndMaxRankPane"/>
            <Label    GridPane.columnIndex="1" GridPane.rowIndex="13" styleClass="user-data-cell" fx:id="userLastVisitLabel"/>
            <Label    GridPane.columnIndex="1" GridPane.rowIndex="14" styleClass="user-data-cell" fx:id="userRegisteredLabel"/>
        </children>
    </GridPane>
    <Button text="Remember changes" id="rememberButton" onAction="#rememberChanges"/>
</VBox>
